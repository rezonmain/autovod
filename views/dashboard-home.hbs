{{> header}}
<div class="p-8 space-y-4">
  <h1 class="text-4xl pb-0.5 inline-block w-full font-bold">dashboard</h1>
  <div class="space-y-4">
    <h2 class='text-2xl pb-0.5'>choose one of the following:</h2>
    <ul class="px-4">
      <li class="p-2 bg-neutral-900 shadow-lg border border-neutral-600">
        <a hx-get="/dashboard?k=event-logs" hx-target="#widget-div" hx-trigger="click"
          class="inline-block w-full underline hover:no-underline cursor-pointer">see
          event logs</a>
      </li>
      <li class="p-2 bg-neutral-900 shadow-lg border border-neutral-600">
        <a hx-get="/dashboard?k=restream" hx-target="#widget-div" hx-trigger="click"
          class="inline-block w-full underline hover:no-underline cursor-pointer">restream</a>
      </li>
      <li class="p-2 bg-neutral-900 shadow-lg border border-neutral-600">
        <a hx-get="/dashboard?k=stop-stream" hx-target="#widget-div" hx-trigger="click"
          class="inline-block w-full underline hover:no-underline cursor-pointer">stop
          a stream</a>
      </li>
      <li class="p-2 bg-neutral-900 shadow-lg border border-neutral-600">
        <a hx-get="/dashboard?k=active-streams" hx-target="#widget-div" hx-trigger="click"
          class="inline-block w-full underline hover:no-underline cursor-pointer">see
          active streams</a>
      </li>
    </ul>
  </div>
  <div id="widget-div"></div>
</div>